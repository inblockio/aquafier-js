#!/bin/bash

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo "Checking commit message spelling..."

# Get the commit message file path (passed as first argument)
COMMIT_MSG_FILE=$1

if [ ! -f "$COMMIT_MSG_FILE" ]; then
    echo -e "${RED}Error: Commit message file not found!${NC}"
    exit 1
fi

# Check if cspell is installed
if ! command -v cspell &> /dev/null; then
    echo -e "${RED}Error: cspell is not installed!${NC}"
    echo -e "${YELLOW}Install it with: npm install -g cspell${NC}"
    exit 1
fi

# Read the commit message (skip comment lines that start with #)
COMMIT_MSG=$(grep -v '^#' "$COMMIT_MSG_FILE")

if [ -z "$COMMIT_MSG" ]; then
    echo -e "${YELLOW}Warning: Empty commit message${NC}"
    exit 0
fi

# Create a temporary file for the commit message
TEMP_FILE=$(mktemp)
echo "$COMMIT_MSG" > "$TEMP_FILE"

# Run spelling check on the commit message
SPELLING_OUTPUT=$(cspell "$TEMP_FILE" 2>&1)
SPELLING_EXIT_CODE=$?

# Clean up temp file
rm -f "$TEMP_FILE"

# Check results
if [ $SPELLING_EXIT_CODE -ne 0 ]; then
    echo -e "${RED}❌ Spelling errors found in commit message:${NC}"
    echo ""
    echo -e "${YELLOW}Your commit message:${NC}"
    echo -e "${NC}$COMMIT_MSG${NC}"
    echo ""
    echo -e "${RED}Misspelled words:${NC}"

    # Extract just the misspelled words from cspell output
    # cspell format: filename:line:col - Unknown word (word)
    MISSPELLED=$(echo "$SPELLING_OUTPUT" | grep -oP '\(.*?\)' | sed 's/[()]//g' | sort -u)

    if [ -z "$MISSPELLED" ]; then
        # Fallback: show full output if parsing fails
        echo "$SPELLING_OUTPUT"
    else
        # Show each misspelled word
        while IFS= read -r word; do
            echo -e "  ${RED}✗${NC} $word"
        done <<< "$MISSPELLED"
    fi

    echo ""
    echo -e "${YELLOW}Suggestions:${NC}"
    echo -e "  • Fix the spelling errors in your commit message"
    echo -e "  • Add correct technical terms to .cspell.json if they're valid"
    echo -e "  • To bypass this check, use: ${NC}git commit --no-verify${NC}"
    exit 1
fi

echo -e "${GREEN}✓ Commit message spelling check passed!${NC}"
exit 0
