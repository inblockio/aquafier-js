#!/bin/bash

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo "Running pre-commit checks..."

# Get list of staged files
FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$FILES" ]; then
    echo -e "${YELLOW}No files staged for commit.${NC}"
    exit 0
fi

# Add your pre-commit checks here
# Example: linting, formatting, tests, etc.

echo -e "${GREEN}âœ“ Pre-commit checks passed!${NC}"
exit 0
